{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "baseUrl": "./",
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "global.d.ts"
  ]
}